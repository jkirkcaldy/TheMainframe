server {
 	listen 80;
 	server_name www.themainframe.co.uk;
 	return 301 https://$server_name$request_uri;
}

# BLOG SITE
server {
	listen 443 ssl http2;
	server_name www.themainframe.co.uk;

#SSL settings
	include /etc/nginx/config/ssl.conf;
  include /etc/nginx/config/cloudflare.conf;
  include /etc/nginx/config/proxy.conf;
  include /etc/nginx/config/geoblock.conf;
  include /etc/nginx/config/errorpages.conf;
  include /etc/nginx/config/serverauth.conf;
  include /etc/nginx/config/subdirs/*.conf;

  location / {
    proxy_pass http://192.168.1.249:9983/;

  }
}
