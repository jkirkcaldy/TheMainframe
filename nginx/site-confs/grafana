server {
	listen 80;
	server_name grafana.themainframe.co.uk;
	return 301 https://$server_name$request_uri;
}
server {
	listen 443 ssl;
	server_name grafana.themainframe.co.uk;
	include /etc/nginx/config/proxy.conf;
#SSL settings
	include /etc/nginx/config/strong-ssl.conf;
#Organizr auth
	include /etc/nginx/config/serverauth-V2.conf; #For server-auth with Organizr, remove unless you use Organizr.
#Maxmind geoblock
	include /etc/nginx/config/geoblock.conf;

	include /etc/nginx/config/cloudflare.conf;
location / {
        auth_request /auth-4; #For server-auth with Organizr, remove unless you use Organizr.
	proxy_pass http://10.10.0.12:3000;
	proxy_hide_header X-Frame-Options;
	proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_pass_request_headers on;
        proxy_set_header Connection "keep-alive";
        proxy_store off;
    }
}
